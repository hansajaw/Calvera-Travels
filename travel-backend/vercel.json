{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@MONGODB_URI",
    "MAIL_HOST": "@MAIL_HOST",
    "MAIL_PORT": "@MAIL_PORT",
    "MAIL_USER": "@MAIL_USER",
    "MAIL_PASS": "@MAIL_PASS",
    "MAIL_FROM": "@MAIL_FROM",
    "MAIL_TO": "@MAIL_TO",
    "CLIENT_ORIGIN": "@CLIENT_ORIGIN"
  }
}
